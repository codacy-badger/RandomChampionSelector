<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="AppTheme.HealthBar" parent="Widget.AppCompat.ProgressBar.Horizontal" />

    <style name="AppTheme.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Large">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme.Text.Larger">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AppTheme.Button">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Spinner">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4sp</item>
        <!--<item name="android:background">@drawable/spinner</item>-->
    </style>

    <style name="AppTheme.Spinner.Dropdown">
        <item name="android:background">@color/primary_dark</item>
    </style>
</resources>
