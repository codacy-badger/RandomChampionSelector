<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="AppTheme">
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Text.Large" parent="android:TextAppearance.Holo.Large">
    </style>

    <style name="Text.Subtitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Subtitle">
    </style>

    <style name="Text.Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
    </style>

    <style name="Text.Shadowed">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="Text.Shadowed.Large">
        <item name="android:textAppearance">@style/Text.Large</item>
    </style>

    <style name="Text.Shadowed.Subtitle">
        <item name="android:textAppearance">@style/Text.Subtitle</item>
    </style>

    <style name="Text.Shadowed.Title">
        <item name="android:textAppearance">@style/Text.Title</item>
    </style>

    <style name="Button">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4sp</item>
        <!--<item name="android:background">@drawable/spinner</item>-->
    </style>

    <style name="Spinner.Dropdown">
        <item name="android:background">@color/primary_dark</item>
    </style>

</resources>