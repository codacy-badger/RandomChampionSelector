    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".ChampionActivity"
        android:useDefaultMargins="true"
        style="@style/AppTheme">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameValue"
            android:layout_row="2"
            android:layout_column="0"
            style="@style/BiggerText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roleValue"
            style="@style/BigText"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/health"
            android:id="@+id/healthText"
            android:layout_row="4"
            android:layout_column="0"
            style="@style/BaseText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/healthValue"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="right"
            style="@style/BaseText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resourceName"
            android:id="@+id/resourceText"
            android:layout_row="5"
            android:layout_column="0"
            style="@style/BaseText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resourceValue"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="right"
            style="@style/BaseText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/range"
            android:id="@+id/rangeText"
            android:layout_row="6"
            android:layout_column="0"
            style="@style/BaseText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rangeValue"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_gravity="right"
            style="@style/BaseText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moveSpeedText"
            android:id="@+id/movSpeedText"
            android:layout_row="7"
            android:layout_column="0"
            style="@style/BaseText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movSpeedValue"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_gravity="right"
            style="@style/BaseText" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_button2"
            android:id="@+id/button"
            android:onClick="pickRandomChampion"
            android:singleLine="false"
            android:textStyle="bold"
            android:layout_row="17"
            android:layout_column="0"
            style="@style/BigText"
            android:layout_gravity="bottom"
            android:layout_columnSpan="2" />

    </GridLayout>

