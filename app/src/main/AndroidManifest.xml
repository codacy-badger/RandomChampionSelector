<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sndroid="http://schemas.android.com/apk/res-auto"
    package="spiderbiggen.randomchampionselector"
    android:installLocation="preferExternal">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ButtonActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListChampionsActivity"
            android:label="@string/title_activity_list_champions"
            android:parentActivityName=".ButtonActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="spiderbiggen.randomchampionselector.ButtonActivity" />
        </activity>
        <activity
            android:name=".ChampionActivity"
            android:label="@string/title_activity_champion"
            android:parentActivityName=".ListChampionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="spiderbiggen.randomchampionselector.ListChampionsActivity" />
        </activity>
    </application>

</manifest>
